---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/project-card.astro';
import { ChevronDoubleDownIcon } from "@heroicons/vue/24/outline";

function calculateAge(birthday: Date) {
    var ageDifMs = Date.now() - birthday.getTime();
    var ageDate = new Date(ageDifMs);
    return Math.abs(ageDate.getUTCFullYear() - 1970);
}
---

<Layout title="Isaac Marovitz">
	<main>
		<div class="h-screen hidden sm:block" />
		<div class="h-screen flex flex-col items-center justify-center px-10 sm:snap-center">
			<div class="flex w-[100%] flex-row items-center justify-start py-20">
				<div class="flex flex-col gap-3 sm:gap-5 lg:gap-10">
					<div class="flex">
						<div class="bg-stone-900 text-white rounded-md sm:rounded-xl p-2 sm:p-5 drop-shadow-md">
							<h1 class="text-left font-extrabold text-2xl sm:text-5xl lg:text-8xl">Hi there, I'm</h1>
						</div>
					</div>
					<div class="flex">
						<div class="bg-stone-900 rounded-md sm:rounded-xl p-2 sm:p-5 drop-shadow-md">
							<h1 class="text-left font-extrabold text-2xl sm:text-5xl lg:text-8xl text-transparent bg-clip-text bg-gradient-to-r from-violet-500 to-fuchsia-500">Isaac.</h1>
						</div>
					</div>
					<div class="flex">
						<div class="bg-stone-900 rounded-full px-2 flex gap-2 drop-shadow-md transition duration-300 hover:ease-in-out hover:bg-gradient-to-br from-stone-800 to-stone-900 hover:drop-shadow-xl hover:scale-105">
							<a href="https://github.com/IsaacMarovitz" aria-label="Go to my GitHub Account" target="_blank" rel="noreferrer noopener" class="fa-brands fa-github text-white text-6 sm:text-8 lg:text-12 p-2" />
							<a href="https://twitter.com/isaacmarovitz" aria-label="Go to my Twitter Account" target="_blank" rel="noreferrer noopener" class="fa-brands fa-twitter text-white text-6 sm:text-8 lg:text-12 p-2" />
						</div>
					</div>
				</div>
				<div class="grow"></div>
				<img src="./profile.webp" alt="Profile picture" class="drop-shadow-md border-4 lg:border-8 rounded-full h-30 w-30 sm:h-50 sm:w-50 lg:h-70 lg:w-70"/>
			</div>
			<div class="flex w-[100%] justify-center">
				<a href="#About" aria-label="Scroll down to about me">
					<ChevronDoubleDownIcon class="h-10 w-10 sm:h-12 sm:w-12 lg:h-15 lg:w-15 text-white bounce" />
				</a>
			</div>
		</div>
		<div id="About" />
		<div class="h-screen flex flex-col md:flex-row items-center justify-center md:justify-between px-10 sm:snap-center gap-5">
			<div class="flex flex-col gap-5">
				<div class="flex">
					<div class="bg-stone-900 rounded-md sm:rounded-xl p-2 sm:p-5 drop-shadow-md text-white">
						<h1 class="text-left font-bold text-5xl text-transparent bg-clip-text bg-gradient-to-r from-violet-500 to-fuchsia-500">About</h1>
					</div>
				</div>
				<div class="flex">
					<div class="bg-stone-900 rounded-md sm:rounded-xl p-2 sm:p-5 drop-shadow-md text-white">
						<p>
							Hi there, I'm Isaac. I'm a {calculateAge(new Date(2006, 6, 16))} year old programmer from London.<br/><br/>
							I started with web development and moved on to game development for 4 years.
							Recently I'm become involved in open-source app development, the specific projects you can see below. 
							In the future, I want to branch out into more low-level projects like OS development.
						</p>
					</div>
				</div>
			</div>
			<div class="w-20" />
			<div class="flex flex-col gap-10 md:grow items-end">
				<div class="flex flex-row text-12 text-white gap-20 md:gap-10">
					<div class="flex">
						<div class="bg-stone-900 w-20 h-20 lg:w-30 lg:h-30 flex items-center justify-center rounded-full p-2 sm:p-5 drop-shadow-md">
							<i class="text-10 md:text-12 lg:text-14 fa-brands fa-rust"></i>
						</div>
					</div>
					<div class="flex">
						<div class="bg-stone-900 w-20 h-20 lg:w-30 lg:h-30 flex items-center justify-center rounded-full p-2 sm:p-5 drop-shadow-md">
							<i class="text-10 md:text-12 lg:text-14 fa-brands fa-swift"></i>
						</div>
					</div>
					<div class="flex">
						<div class="bg-stone-900 w-20 h-20 lg:w-30 lg:h-30 flex items-center justify-center rounded-full p-2 sm:p-5 drop-shadow-md">
							<i class="text-10 md:text-12 lg:text-14 fa-brands fa-unity"></i>
						</div>
					</div>
				</div>
				<div class="flex flex-row text-12 text-white gap-20 md:gap-10">
					<div class="flex">
						<div class="bg-stone-900 w-20 h-20 lg:w-30 lg:h-30 flex items-center justify-center rounded-full p-2 sm:p-5 drop-shadow-md">
							<p class="fa text-xl md:text-2xl lg:text-3xl select-none">C#</p>
						</div>
					</div>
					<div class="flex">
						<div class="bg-stone-900 w-20 h-20 lg:w-30 lg:h-30 flex items-center justify-center rounded-full p-2 sm:p-5 drop-shadow-md">
							<i class="text-10 md:text-12 lg:text-14 fa-brands fa-python"></i>
						</div>
					</div>
					<div class="flex">
						<div class="bg-stone-900 w-20 h-20 lg:w-30 lg:h-30 flex items-center justify-center rounded-full p-2 sm:p-5 drop-shadow-md">
							<i class="text-10 md:text-12 lg:text-14 fa-brands fa-html5"></i>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div id="Projects" />
		<ProjectCard
			name="PlayCover"
			description="A macOS app that allows you to run iOS apps and games through Mac Catalyst. PlayCover also extends Catalyst with additional features such as device ID spoofing, keymapping, and resolution control." 
			link="https://github.com/PlayCover/PlayCover"
			image_path="./playcover.webp"
			flipped={false} />
		<ProjectCard 
			name="Ryujinx"
			description="A modern Nintendo Switch emulator built from the ground up in C#. Ryujinx achieves impeccable compatibility while maintaining modern and readable code." 
			link="https://github.com/Ryujinx/Ryujinx"
			image_path="./ryujinx.webp"
			flipped={true} />
		<div class="h-screen hidden sm:block" />
	</main>
</Layout>

<style>
	.bounce {
		animation: bounce 2s infinite;
	}

	@keyframes bounce {
		0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
		40% {transform: translateY(-2vh);}
		60% {transform: translateY(-1.4vh);}
	}
</style>