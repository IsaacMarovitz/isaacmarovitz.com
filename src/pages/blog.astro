---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/footer.astro";
import BlogPost from "../components/blog-post.astro";
import { getCollection } from 'astro:content';
import type { CollectionEntry } from "astro:content";
import BlogNav from "../components/blog-nav.astro";


const posts = (await getCollection("posts")).sort(
    (a: CollectionEntry<"posts">, b: CollectionEntry<"posts">) => {
        return b.data.pubDate.valueOf() - a.data.pubDate.valueOf();
    }
);
---

<Layout title="Isaac Marovitz - Blog" description="Blog posts about various things.">
    <main class="flex justify-center">
        <div class="flex flex-col min-h-screen min-w-0 max-w-4xl grow">
            <div class="flex flex-col max-[1400px]:px-5 grow">
                <div class="flex flex-col items-start text-left">
                    <BlogNav allPosts={false} />
                    <div class="flex flex-col gap-2">
                        <h1>Blog Posts</h1>
                    </div>  
                </div>
                <div class="py-5 text-secondary">
                    <hr />
                </div>
                <ul class="flex flex-col gap-10 items-start">
                    { posts.map((post: any) => 
                        <li>
                            <BlogPost post={post} />
                        </li>
                    )}
                </ul>
                <div class="grow" />
                <Footer />
            </div>
        </div>
    </main>
</Layout>

<style>
    @reference "tailwindcss";
    
    h1 {
        @apply font-extrabold;
        @apply text-2xl;
        @apply sm:text-5xl;
        @apply lg:text-5xl;
    }
</style>
